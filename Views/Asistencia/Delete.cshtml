@model SoftWC.Models.Asistencia
@using Microsoft.AspNetCore.Identity
@using SoftWC.Models
@inject SignInManager<SoftWC.Models.Usuario> SignInManager
@inject UserManager<SoftWC.Models.Usuario> UserManager

<link rel="stylesheet" href="~/css/Delete.css" />

@{
    var user = await UserManager.GetUserAsync(User);
    var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();        
    ViewData["Title"] = "Create";
        var layoutRoles = new[] { "Administrador", "Contador", "Controltotal", "Supervisor" };
    if (roles.Any(r => layoutRoles.Contains(r)))
    {
        Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    }
    ViewData["Title"] = "Listado Sedes";
}
@{
    ViewData["Title"] = "Delete";
}

<div class="delete-container">
    <h1 class="delete-title">Eliminar</h1>

    <h3 class="delete-warning">Â¿Estas seguro de eliminar todos estos datos de la entidad seleccionada?</h3>
    <div class="delete-details">
        <h4>Asistencia</h4>
        <hr />
        <dl class="delete-dl">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Empleado)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Empleado.UserName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HoraEntrada)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HoraEntrada)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HoraSalida)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HoraSalida)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HorasTrabajadas)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HorasTrabajadas)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Presente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Presente)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Observacion)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Observacion)
            </dd>
        </dl>
        
        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="IdAsistencia" />
            <input type="submit" value="Eliminar" class="btn-eliminar" /> |
            <a asp-action="Index" class="btn-regresar">Regresar a la lista</a>
        </form>
    </div>
</div>
<script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")" ></script>
<script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
