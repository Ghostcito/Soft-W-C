@{
    ViewBag.Title = "Marcar Asistencia";
    string nombreUsuario = "Oscar";
    string horaActual = DateTime.Now.ToString("hh:mm tt");
    string fechaActual = DateTime.Now.ToString("dddd, dd 'de' MMMM 'de' yyyy");
    string direccion = "Av. Ejemplo 123, Ciudad";
}

<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #D5D9FF; font-family: Arial, sans-serif;">
    <div style="width: 600px; padding: 30px; background-color: white; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.2); text-align: center;">
        <h2 style="font-size: 28px; margin-bottom: 20px;">Marcar Asistencia</h2>
        <p style="font-size: 18px;"><strong>Hola, @nombreUsuario 👋 ¡Listo para comenzar tu jornada?</strong></p>

        <div style="font-size: 36px; font-weight: bold; margin: 20px 0;">@horaActual</div>
        <p style="font-size: 16px; margin-bottom: 20px;">@fechaActual</p>

        <p style="color: gray; font-size: 14px;">📍 @direccion</p>

        <button style="background-color: #2d6cdf; color: white; border: none; padding: 12px 25px; border-radius: 8px; cursor: pointer; margin: 20px 0; font-size: 16px;">
            Marcar entrada
        </button>

        <div style="display: flex; align-items: center; justify-content: center; margin-top: 20px; gap: 15px;">
            <div style="text-align: left;">
                <p style="color: green; font-size: 14px; margin: 3px 0;">✅ Hora registrada correctamente</p>
                <p style="color: green; font-size: 14px; margin: 3px 0;">✅ Ubicación confirmada</p>
                <p style="color: green; font-size: 14px; margin: 3px 0;">✅ Foto tomada</p>
            </div>
            <div style="display: flex; flex-direction: column; align-items: center; text-align: center;">
                <img src="https://randomuser.me/api/portraits/men/75.jpg" alt="Foto" style="width: 60px; height: 60px; border-radius: 50%; margin-bottom: 5px;">
                <span style="font-size: 14px;">Subir evidencia<br /><small style="color: gray;">de ingreso</small></span>
            </div>
        </div>

        <div style="margin-top: 20px; text-align: center;">
            <h4 style="font-size: 20px; margin-bottom: 5px;">Historial del día</h4>
            <div style="display: grid; grid-template-columns: 1fr 1fr; text-align: left; gap: 0;">
                <p style="font-size: 16px; margin: 2px 0;"><strong>Entrada:</strong></p>
                <p style="font-size: 16px; margin: 2px 0; text-align: right;">08:17 AM</p>
                <p style="font-size: 16px; margin: 2px 0;"><strong>Pausa:</strong></p>
                <p style="font-size: 16px; margin: 2px 0; text-align: right;">--</p>
                <p style="font-size: 16px; margin: 2px 0;"><strong>Salida:</strong></p>
                <p style="font-size: 16px; margin: 2px 0; text-align: right;">--</p>
                <p style="font-size: 16px; margin: 2px 0;"><strong>Tiempo trabajado:</strong></p>
                <p style="font-size: 16px; margin: 2px 0; text-align: right;">--</p>
            </div>
            <a href="#" style="color: #2d6cdf; font-size: 14px; margin-top: 5px; display: inline-block;">Ver historial</a>
        </div>
    </div>
</div>

