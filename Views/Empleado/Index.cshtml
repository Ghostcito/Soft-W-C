@model Soft_W_C.Models.Usuario
@{
    ViewData["Title"] = "Home Page";
    Layout = "_layout";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido @Model.Nombre @Model.Apellido</h1>
</div>
<main class="px-3">

    <div class="d-flex justify-content-center">
        <a asp-controller="Empleado" asp-action="VerAsistencias" class="btn btn-primary mx-2">Ver Asistencias</a>
        <a asp-controller="Empleado" asp-action="Marca" class="btn btn-success mx-2">Marcar Asistencia</a>
    </div>
</main>