@model IEnumerable<Soft_W_C.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_layout";
}

<div class="text-center">
    <h1 class="display-4">Bienvenida al empleadoooooooc</h1>

</div>
<main class="px-3">
    <div class="container mt-4"></div>
    <h1 class="text-center">Lista de Empleados </h1>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>DNI</th>
                <th>Fecha de Ingreso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var empleado in Model)
                {
                    <tr>
                        <td>@empleado.Nombre</td>
                        <td>@empleado.Apellido</td>
                        <td>@empleado.Email</td>
                        <td>@empleado.DNI</td>
                        <td>@empleado.FechaIngreso?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("Editar", "Empleado", new { id = empleado.Id })"
                                class="btn btn-primary btn-sm">Editar</a>
                            <a href="@Url.Action("Eliminar", "Empleado", new { id = empleado.Id })"
                                class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No hay empleados disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
    </div>


</main>