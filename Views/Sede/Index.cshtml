@model IEnumerable<SoftWC.Models.Sede>

@using Microsoft.AspNetCore.Identity
@using SoftWC.Models
@inject SignInManager<SoftWC.Models.Usuario> SignInManager
@inject UserManager<SoftWC.Models.Usuario> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();        
    ViewData["Title"] = "Create";
    @if (roles.Contains("Administrador"))
    {
        Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
        
    }
    ViewData["Title"] = "Listado Sedes";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-11">
            <div class="card shadow border-0">
                <div class="card-header bg-gradient bg-primary text-white text-center py-3 rounded-top">
                    <h2 class="mb-0 fw-bold">Listado de Sedes (Empresas Clientes)</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3 text-end">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Crear Nueva Sede
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered align-middle text-center bg-white rounded shadow-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                                    <th>@Html.DisplayNameFor(model => model.Nombre_local)</th>
                                    <th>@Html.DisplayNameFor(model => model.Direccion_local)</th>
                                    <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
                                    <th>@Html.DisplayNameFor(model => model.Provincia)</th>
                                    <th>@Html.DisplayNameFor(model => model.estadoSede)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-semibold">
                                                @Html.DisplayFor(modelItem => item.Cliente.ClienteId)
                                            </span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre_local)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Direccion_local)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Provincia)</td>
                                        <td>
                                            <span class="badge rounded-pill @(item.estadoSede == SedeEnum.ACTIVA ? "bg-success" : "bg-secondary") px-3 py-2 fs-6">
                                                @Html.DisplayFor(modelItem => item.estadoSede)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.SedeId" class="btn btn-warning" title="Editar">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.SedeId" class="btn btn-info text-white" title="Ver">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.SedeId" class="btn btn-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                                <a asp-controller="Usuario" asp-action="FindAllBySede" asp-route-id="@item.SedeId" class="btn btn-primary" title="Empleados">
                                                    <i class="bi bi-people"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3 text-center">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")" ></script>
<script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")" ></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
