@{
    ViewData["Title"] = ViewData["Title"] ?? "Mi Aplicación";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        #sidebar {
            width: 250px;
            background-color: #D5D9FF;
            transition: width 0.3s ease;
        }

        #sidebar.collapsed {
            width: 60px !important;
        }

        #sidebar .nav-link {
            font-size: 16px;
            padding: 10px 15px;
            color: #343a40;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            transition: background-color 0.2s, transform 0.2s, opacity 0.3s ease;
        }

        #sidebar .nav-link:hover {
            background-color: #b0b4e3;
            transform: scale(1.05);
        }

        #sidebar .nav-link i {
            margin-right: 10px;
            font-size: 24px;
            transition: transform 0.3s ease, margin-right 0.3s ease;
        }

        #sidebar.collapsed .nav-link {
            justify-content: center;
        }

        #sidebar.collapsed .nav-link span,
        #sidebar.collapsed .user-info {
            display: none;
        }

        .dropdown-toggle::after {
            margin-left: .5em;
        }

        .user-info {
            font-weight: bold;
            margin-bottom: 10px;
            color: #343a40;
        }
    </style>
</head>
<body>
    <div class="row flex-nowrap">
        <!-- Sidebar -->
        <div id="sidebar" class="col-auto col-md-3 col-xl-2 px-sm-2 px-0">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-4 text-dark min-vh-100">
                <button id="sidebarToggle" class="btn btn-sm btn-light mb-3">
                    <i class="bi bi-list"></i>
                </button>

                <!-- ✅ Dropdown de usuario -->
                <div class="dropdown w-100 mb-3">
                    <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-gear me-2"></i>
                        <span class="d-none d-sm-inline">@User.Identity?.Name</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser">
                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Perfil</a></li>
                        <li><a class="dropdown-item" href="#">Configuración</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="dropdown-item p-0 m-0">
                                <button type="submit" class="dropdown-item bg-transparent border-0 w-100 text-start">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>

                <!-- Menú lateral -->
                <ul class="nav nav-pills flex-column mb-auto w-100">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="bi bi-house"></i> <span>Inicio</span>
                        </a>
                    </li>
                    <li><a href="#" class="nav-link"><i class="bi bi-list-task"></i> <span>Tareos</span></a></li>
                    <li><a asp-controller="Sede" asp-action="Index" class="nav-link"><i class="bi bi-geo-alt"></i> <span>Sedes</span></a></li>
                    <li><a asp-controller="Empleado" asp-action="Index" class="nav-link"><i class="bi bi-people"></i> <span>Empleados</span></a></li>
                    <li><a asp-controller="Cliente" asp-action="Index" class="nav-link"><i class="bi bi-people"></i> <span>Clientes</span></a></li>
                    <li><a asp-controller="Supervision" asp-action="Index" class="nav-link"><i class="bi bi-people"></i> <span>Supervisiones</span></a></li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col py-3">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const toggleBtn = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');

        toggleBtn?.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>
</body>
</html>
