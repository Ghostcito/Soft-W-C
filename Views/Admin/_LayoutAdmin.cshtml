@{
    ViewData["Title"] = ViewData["Title"] ?? "Mi Aplicación";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar -->
            <div id="sidebar" class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark transition">
                <div id="sidebarCenter" class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-4 text-white min-vh-100">
                    <button id="sidebarToggle" class="btn btn-sm btn-light">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="sidebar-heading text-white mb-3 pt-4">
                        <i class="bi bi-layout-sidebar-inset"></i>
                        <span class="d-none d-sm-inline">Menú Principal</span>
                    </div>

                    <div class="text-white mb-3">
                        <i class="bi bi-person-circle"></i> 
                        <span class="d-none d-sm-inline">Hola @User.Identity?.Name!</span>
                    </div>

                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn btn-outline-light btn-sm mb-3">
                            <i class="bi bi-box-arrow-right"></i> 
                            <span class="d-none d-sm-inline">Logout</span>
                        </button>
                    </form>

                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle text-white px-0">
                                <i class="fs-5 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Inicio</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link text-white px-0 align-middle">
                                <i class="fs-5 bi-speedometer2"></i> 
                                <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100"><a href="#" class="nav-link text-white px-0"><span class="d-none d-sm-inline">Subitem 1</span></a></li>
                                <li><a href="#" class="nav-link text-white px-0"><span class="d-none d-sm-inline">Subitem 2</span></a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white px-0 align-middle">
                                <i class="fs-5 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Usuarios</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white px-0 align-middle">
                                <i class="fs-5 bi-file-earmark-text"></i> <span class="ms-1 d-none d-sm-inline">Reportes</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white px-0 align-middle">
                                <i class="fs-5 bi-gear"></i> <span class="ms-1 d-none d-sm-inline">Configuración</span>
                            </a>
                        </li>
                    </ul>

                    <hr class="text-white w-100">
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="profile" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Usuario</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="#">Perfil</a></li>
                            <li><a class="dropdown-item" href="#">Ajustes</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Contenido principal -->
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JS para el sidebar -->
    <script>
        const toggleBtn = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarCenter = document.getElementById('sidebarCenter');

        toggleBtn?.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            sidebarCenter.classList.toggle('align-items-sm-start');
        });
    </script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* evita scroll horizontal si hay elementos mal dimensionados */
        }
        #sidebar.collapsed {
            width: 60px !important;
        }

        #sidebar.collapsed .d-sm-inline {
            display: none !important;
        }

        #sidebar {
            transition: width 0.3s ease;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
