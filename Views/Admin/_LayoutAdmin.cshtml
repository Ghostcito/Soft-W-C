@{
    ViewData["Title"] = ViewData["Title"] ?? "Mi Aplicación";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        #sidebar {
            width: 250px;
            transition: width 0.3s ease, background-color 0.3s ease;
            background-color: #D5D9FF;
            /* Updated color */
        }

        #sidebar.collapsed {
            width: 60px !important;
        }

        #sidebar .nav-link {
            font-size: 16px;
            padding: 10px 15px;
            color: #343a40;
            /* Adjusted text color for better contrast */
            transition: background-color 0.2s, transform 0.2s, opacity 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        #sidebar .nav-link:hover {
            background-color: #b0b4e3;
            /* Slightly darker shade for hover */
            transform: scale(1.05);
        }

        #sidebar .nav-link i {
            margin-right: 10px;
            font-size: 24px;
            /* Adjust icon size */
            transition: transform 0.3s ease, margin-right 0.3s ease;
        }

        #sidebar.collapsed .nav-link {
            justify-content: center;
            /* Center icons when collapsed */
        }

        #sidebar.collapsed .nav-link span {
            display: none;
        }

        #sidebar.collapsed .nav-link i {
            margin-right: 0;
            transform: scale(1.2);
            /* Slightly enlarge icons when collapsed */
        }

        #sidebarToggle {
            margin-bottom: 20px;
        }

        .sidebar-heading {
            font-size: 18px;
            font-weight: bold;
            transition: opacity 0.3s ease;
        }

        #sidebar.collapsed .sidebar-heading {
            opacity: 0;
            /* Hide heading smoothly */
        }

        .navbar {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar .nav-link {
            color: #343a40;
            transition: color 0.2s;
        }

        .navbar .nav-link:hover {
            color: #007bff;
        }
    </style>
</head>

<body>
    <div class="row flex-nowrap">
        <!-- Sidebar -->
        <div id="sidebar" class="col-auto col-md-3 col-xl-2 px-sm-2 px-0">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-4 text-dark min-vh-100">
                <button id="sidebarToggle" class="btn btn-sm btn-light">
                    <i class="bi bi-list"></i>
                </button>
                <div class="sidebar-heading text-dark mb-3">
                    <i class="bi bi-layout-sidebar-inset"></i>
                    <span>Menú Principal</span>
                </div>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="bi bi-house"></i> <span>Inicio</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link">
                            <i class="bi bi-list-task"></i> <span>Tareos</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Sede" asp-action="Index" class="nav-link">
                            <i class="bi bi-geo-alt"></i> <span>Sedes</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Empleado" asp-action="Index" class="nav-link">
                            <i class="bi bi-people"></i> <span>Empleados</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Cliente" asp-action="Index" class="nav-link">
                            <i class="bi bi-people"></i> <span>Clientes</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Supervision" asp-action="Index" class="nav-link">
                            <i class="bi bi-people"></i> <span>Supervisiones</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col py-3">
            @RenderBody()
        </div>
    </div>

    <!-- JS para el sidebar -->
    <script>
        const toggleBtn = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');

        toggleBtn?.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
