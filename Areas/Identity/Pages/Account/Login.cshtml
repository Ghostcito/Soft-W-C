@page
@model Soft_W_C.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login - Work and Cleaning S.A.C.";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="row shadow rounded w-100 mx-2" style="max-width: 900px; background-color: white;">
        
        <!-- Lado Izquierdo -->
        <div class="col-12 col-md-6 p-4 text-center" style="background-color: #eef3fc;">
            <img src="https://firebasestorage.googleapis.com/v0/b/appweb2-44bcb.appspot.com/o/game%2FCaptura%20de%20pantalla%202025-05-01%20231422.png?alt=media&token=e47b4245-bcd5-48d0-861c-bbf0ca6305cc" alt="Logo" style="max-height: 80px;" class="mb-3 img-fluid" />
            <h5 class="mb-3">¡Bienvenido a la Plataforma de Tareos de Work and Cleaning!</h5>
            <p class="text-muted">
                Tu espacio seguro para registrar, gestionar y consultar tus horas trabajadas de forma rápida y eficiente.
                Inicia sesión para mantener tu información siempre actualizada y al alcance de un clic.
            </p>
        </div>

        <!-- Lado Derecho -->
        <div class="col-12 col-md-6 p-4">
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-dark mb-3 d-block">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <h4>¡Le damos la bienvenida!</h4>
            <p class="text-muted mb-4">Inicie sesión en su cuenta</p>

            <form method="post">
                <div class="mb-3">
                    <label for="DNI" class="form-label">DNI:</label>
                    <input asp-for="Input.DNI" class="form-control" placeholder="Introduzca DNI" />
                    <span asp-validation-for="Input.DNI" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password:</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Introduzca Password" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <a asp-page="./ForgotPassword" class="text-success">¿Olvidó su contraseña?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
            </form>

            <hr />
            <!-- Se eliminó la sección de inscripción -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}